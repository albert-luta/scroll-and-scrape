{
	"manifest_version": 2,
	"name": "Scroll and scrape",
	"version": "0.1",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"browser_action": {
		"default_icon": "assets/toolbar-icon.png",
		"default_popup": "popup/index.html",
		"default_title": "Scroll and scrape"
	},
	"permissions": ["tabs"],
	"icons": {
		"16": "assets/toolbar-icon.png",
		"48": "assets/toolbar-icon.png",
		"128": "assets/toolbar-icon.png"
	}
}
